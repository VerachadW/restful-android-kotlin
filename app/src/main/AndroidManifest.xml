<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taskworld.android.restfulandroidkotlin" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <service android:name=".network.service.TheMovieAPISpiceService"
                 android:exported="false" />

        <activity
            android:name=".activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.ProductListActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity android:name=".activities.ProductEditActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity android:name=".activities.MovieListActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        
        <activity android:name=".activities.MovieDetailActivity"
                  android:theme="@style/AppTheme.AppCompat.Translucent"
                  android:parentActivityName=".activities.MainActivity" />

    </application>

</manifest>
