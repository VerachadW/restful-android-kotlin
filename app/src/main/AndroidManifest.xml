<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.taskworld.android.restfulandroidkotlin" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <service android:name=".network.service.TheMovieAPISpiceService"
                 android:exported="false" />
        <service android:name=".network.service.RealmSpiceService"
            android:exported="false" />

        <activity android:name=".view.activity.SignInActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activity.MainActivity" />

        <activity android:name=".view.activity.ProductListActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity android:name=".view.activity.ProductEditActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />

        <activity android:name=".view.activity.MovieListActivity"
                  android:theme="@style/Theme.AppCompat.Light.DarkActionBar" />
        
        <activity android:name=".view.activity.MovieDetailActivity"
                  android:theme="@style/AppTheme.AppCompat.Translucent"
                  android:parentActivityName=".view.activity.MainActivity" />

    </application>

</manifest>
